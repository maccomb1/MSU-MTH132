      <exercise xml:id="prob-net-change-01">
        <statement>
          <p>
            A bacteria culture grows at rate <m>r(t)=200e^{0.1t}</m> (cells per hour).
            Interpret <m>\displaystyle \int_0^5 r(t)\,dt</m> in words.
          </p>
        </statement>
      </exercise>

      <exercise xml:id="prob-indef-01">
        <statement>
          <p>Compute <m>\displaystyle \int (6x^5-4\sec^2 x)\,dx</m>.</p>
        </statement>
      </exercise>

      <exercise xml:id="prob-indef-02">
        <statement>
          <p>Compute <m>\displaystyle \int \left(3\cos(2x)-\frac{1}{x}\right)\,dx</m>.</p>
        </statement>
      </exercise>
    </exercisegroup>

    <exercisegroup>
      <title>Average Value</title>

      <exercise xml:id="prob-avg-01">
        <statement>
          <p>
            Find the average value of <m>f(x)=x^2</m> on <m>[1,4]</m>.
          </p>
        </statement>
      </exercise>

      <exercise xml:id="prob-avg-02">
        <statement>
          <p>
            Let <m>f</m> be continuous on <m>[a,b]</m> and suppose <m>0\le f(x)\le 10</m>.
