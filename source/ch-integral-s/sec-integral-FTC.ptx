    <exercisegroup>
      <title>Using the First Fundamental Theorem</title>

      <exercise xml:id="prob-ftoc-01">
        <statement>
          <p>
            Let <m>\displaystyle I(x)=\int_{1}^{x} (t^3-2t)\,dt</m>.
            Compute <m>I'(x)</m>.
          </p>
        </statement>
      </exercise>

      <exercise xml:id="prob-ftoc-02">
        <statement>
          <p>
            Compute <m>\displaystyle \frac{d}{dx}\left(\int_{0}^{x^2} \cos(t)\,dt\right)</m>.
          </p>
        </statement>
      </exercise>

      <exercise xml:id="prob-ftoc-03">
        <statement>
          <p>
            Compute <m>\displaystyle \frac{d}{dx}\left(\int_{\sin(x)}^{3} \sqrt{1+t^2}\,dt\right)</m>.
          </p>
        </statement>
      </exercise>
    </exercisegroup>

    <exercisegroup>
      <title>Using the Second Fundamental Theorem</title>

      <exercise xml:id="prob-ftoc-04">
        <statement>
          <p>Evaluate <m>\displaystyle \int_{0}^{2} (3x^2-4)\,dx</m>.</p>
        </statement>
      </exercise>

      <exercise xml:id="prob-ftoc-05">
        <statement>
          <p>Evaluate <m>\displaystyle \int_{-1}^{1} (x^3+2x)\,dx</m>.</p>
        </statement>
      </exercise>

      <exercise xml:id="prob-ftoc-06">
        <statement>
          <p>Find the area between <m>y=x^2-4</m> and the <m>x</m>-axis on the interval <m>[0,3]</m>.</p>
        </statement>
      </exercise>
