		\draw[dashed] ({17}, {7*sin(17/2 r) + 1.5*(17) +2 -0.05*(17)^2}) node[blue] {$\bullet$} -- (17,0) node[below] {$b$};
		\draw[dashed] ({17}, {7*sin(17/2 r) + 1.5*(17) +2 -0.05*(17)^2}) -- (0,{7*sin(17/2 r) + 1.5*(17) +2 -0.05*(17)^2}) node[left] {$f(b)$};
		
